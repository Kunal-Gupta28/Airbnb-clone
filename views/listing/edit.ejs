<%- layout('layout/boilerplate') %>

<body>
  <div class="row">
    <div class="col-12">
      <h3 class="text-center mt-5">Edit your Listing</h3>
    </div>

    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listing/<%= listing._id%>?method=PUT;"
        novalidate
        enctype="multipart/form-data"
        class="needs-validation"
      >
        <div>
          <label for="title" class="form-label">title</label>
          <input
            class="form-control"
            type="text"
            name="listing[title]"
            required
            value="<%= listing.title%>"
          />
          <div class="valid-feedback">Title looks good</div>
        </div>
        <br />
        <div>
          <label for="description" class="form-label">description</label>
          <textarea name="listing[description]" class="form-control" required>
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <br />
        <div>
          <img src="<%= listing.image.url%>" alt="">
        </div>

        <div>
          <label for="image" class="form-label">Upload new image</label>
          <input
            class="form-control"
            type="file"
            name="listing[image]"
          />
        </div>
        
        <br />
        <div class="row">
          <div class="col-6">
            <label for="price" class="form-label">price</label>
            <input
              class="form-control"
              type="number"
              name="listing[price]"
              required
              value="<%= listing.price%>"
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="col-6">
            <label for="location" class="form-label">location</label>
            <input
              class="form-control"
              type="text"
              name="listing[location]"
              required
              value="<%= listing.location%>"
            />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>
        <br />
        <div>
          <label for="country" class="form-label">country</label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            required
            value="<%= listing.country%>"
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">Edit</button>
      </form>
    </div>
  </div>
</body>
